{
  "extends": ["stylelint-config-recommended-scss"],
  "rules": {
    "selector-type-no-unknown": [
      true,
      {
        "ignoreTypes": ["page"]
      }
    ],
    "unit-no-unknown": [
      true,
      {
        "ignoreUnits": ["rpx"]
      }
    ],
    "no-descending-specificity": null
  },

  "ignoreFiles": ["dist", "*.html"]
}
